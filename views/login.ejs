<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="../CSS/login.css">
    <script src="https://cdn.lordicon.com/lordicon.js"></script>
</head>
<script>
    if (localStorage.getItem("user-token")){
        window.location.href = "/home"
    }
    if (localStorage.getItem("admin-token")){
        window.location.href = "/admin"
    }
</script>
<body>
    <div class="container">
<center>
<lord-icon src="https://cdn.lordicon.com/zbbefawl.json" trigger="in" delay="1500" state="in-reveal" colors="primary:#000000,secondary:#ffc738" style="width:150px;height:150px">
</lord-icon>
</center>
        <h2><i>Login</h2></i>
        <div className="form-div">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button onclick="login()">Login</button>
            <p>Do not have an account?</p> <button onclick="window.location.href='/signup'">Sign Up</button>
        </div>
    </div>
</body>
<script>
    async function login(){
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        const response = await fetch("/api/login", {
            method: "POST",
            headers: {
                "Content-type": "application/json"
            },
            body: JSON.stringify({ username, password })
        })
        const json = await response.json();
        if (json.success){
            if (json.token){
                localStorage.setItem("user-token", json.token)
                window.location.href = "/home"
            }
            if (json.admin_token){
                localStorage.setItem("admin-token", json.admin_token)
                window.location.href = "/admin"
            } 
        }else{
            window.alert(json.message)
        }
    }
</script>
</html>
